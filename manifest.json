{
  "manifest_version": 3,
  "name": "StackScope",
  "version": "1.0.1",
  "description": "Detect web technologies used on any website - frameworks, analytics, CMS, and more",
  "short_name": "StackScope",
  "author": "kreggscode",
  "homepage_url": "https://kreggscode.github.io/stackscope",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "StackScope - Detect Technologies"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "web_accessible_resources": [],

  "minimum_chrome_version": "88"
}
